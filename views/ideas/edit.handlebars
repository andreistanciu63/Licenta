{{#each errors}}

<div>{{text}}</div>

{{else}}
{{/each}}

<div>
    <h3>Edit Video Idea</h3>
    <form method="post" action="/ideas/{{idea._id}}?_method=PUT">
    <input type="hidden" name="_method" value="PUT">
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" value="{{idea.title}}"> 
        </div>
        <div>
            <label for="details">Details</label>
            <textarea type="text" name="details">{{idea.details}}</textarea>
        </div>
        <button type="submit">Submit</button>
    </form>

</div>
