

<div>
    <h3>Video Idea</h3>
    <form action="/ideas" method="post">
        <div>
            <label for="title">Title</label>
            <input type="text" name="title">
        </div>
        <div>
            <label for="details">Details</label>
            <textarea type="text" name="details"></textarea>
        </div>
        <div>
            <select name="status">
